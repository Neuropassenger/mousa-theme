        "appearanceTools": true,
        "layout": {
            "contentSize": "1140px",
            "wideSize": "1440px"
        },
        "color": {
            "palette": [
                {
					"color": "#eeede0",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#c9a050",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#1e1d18",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#f7f6ec",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#6d6d65",
					"name": "Tertiary",
					"slug": "tertiary"
				},
				{
                    "color": "#92938f",
					"name": "Quaternary",
					"slug": "quaternary"
				},
				{
					"color": "#92938f",
					"name": "Quinary",
					"slug": "quinary"
				},
				{
					"color": "#ebe9cf",
					"name": "Senary",
					"slug": "senary"
				}
            ]
        },
        "typography": {
            "fluid": true,
            "letterSpacing": true,
            "lineHeight": true,
            "textColumns": true,
            "fontFamilies": [
				{
					"fontFace": [
						{
							"fontFamily": "Cormorant Garamond",
							"fontStyle": "normal",
							"fontWeight": "700",
							"src": "file:./assets/fonts/cormorant-garamond/700.woff2"
						},
						{
							"fontFamily": "Cormorant Garamond",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": "file:./assets/fonts/cormorant-garamond/400.woff2"
						}
					],
					"fontFamily": "Cormorant Garamond, serif",
					"name": "Cormorant Garamond",
					"slug": "cormorant-garamond"
				}
			],
			"defaultFontSizes": false,
			"fontSizes": [
				{
					"name": "Extra Tiny",
					"slug": "xx-small",
